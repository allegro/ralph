# http://editorconfig.org/

# Top-most EditorConfig file ?
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentiation
[*.{css,js,json,py}]
indent_style = space
indent_size = 4

[*.{html,yml}]
indent_style = space
indent_size = 2
